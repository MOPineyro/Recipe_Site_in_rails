
  <label for="recipe_name">Recipe Name:
    <input id="recipe_name" name="recipe[name]" type="text" placeholder="Recipe Name" value="<%= @recipe.name %>">
  </label>
  <label for="recipe_ingredients">Recipe Ingredients:
    <input id="recipe_ingredients" name="recipe[ingredients]" type="text" placeholder="Recipe Ingredients" value="<%= @recipe.ingredients %>">
  </label>
  <label for="recipe_steps">Recipe Steps:
    <input id="recipe_steps" name="recipe[steps]" type="text" placeholder="Recipe Steps" value="<%= @recipe.steps %>">
  </label>
  <label for="recipe_stars">Recipe Ingredients:
    <select id="recipe_stars" name="recipe[stars]" type="number" value="<%= @recipe.stars %>">
      <% (1..5).each do |number| %>
        <% if @recipe.stars == number %>
          <option value="<%= number %>" selected="<%= @recipe.stars %>"><%= number %></option>
        <% else %>
        <option value="<%= number %>"><%= number %></option>
        <% end %>
      <% end %>
    </select>
  </label>

